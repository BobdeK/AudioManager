<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appxbuild.audiomanager.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView"
        android:text="Android Audio Recording"
        android:textSize="26dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/img" />

    <Button
        android:id="@+id/btnmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="34dp"
        android:text="Mode" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ring"
        android:id="@id/btnring"
        android:layout_alignTop="@id/btnmode"
        android:layout_alignRight="@id/textView"
        android:layout_alignEnd="@id/textView"
        />

    <Button
        android:id="@+id/btnvibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnring"
        android:layout_alignBottom="@+id/btnring"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/btnring"
        android:layout_toStartOf="@+id/btnring"
        android:text="vibrate" />

    <Button
        android:id="@+id/btnsilent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnvibrate"
        android:layout_alignStart="@+id/btnvibrate"
        android:layout_below="@+id/btnvibrate"
        android:layout_marginTop="20dp"
        android:text="Silent" />

</RelativeLayout>
